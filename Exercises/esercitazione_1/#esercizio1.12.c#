#include<stdio.h>

int main() {
	long int M,a,b,mcm,i=1;
	printf("Minimo comune multiplo\n");
	printf("Inserire un intero N1: ");
	scanf("%l", &a);
	printf("Inserire un intero N2: ");
	scanf("%l", &b);
	if( a >= b ) {
		M=a;
		mcm=a;
	}
	else {
		M=b;
		mcm=b;
	}
	while( mcm%a!=0 || mcm%b!=0 ) {
		mcm = M*i;
		i++;
	}
	printf("il m.c.m. Ã¨ = %d\n",mcm);
}
